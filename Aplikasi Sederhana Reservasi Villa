int CVICALLBACK panel_login (int panel, int event, void *callbackData,
						     int eventData1, int eventData2)
{
	switch (event)
	{
		case EVENT_CLOSE:
			QuitUserInterface (0); //keluar dari panel//
			break;
	}
	return 0;
}

