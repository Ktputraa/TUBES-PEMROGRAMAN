static int panelHandle = 0, panelHandle_2= 0, panelHandle_3 = 0, panelHandle_4 = 0, panelHandle_5 = 0;
void InputComboValues (int panel, int control);

int j=1;
int k=1;
int m=1;
int n=1;
	  

//|============================================================================================|//
